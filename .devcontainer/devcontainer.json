// For format details, see https://aka.ms/devcontainer.json
// For config options, see README: https://github.com/devcontainers/templates/tree/main/src/javascript-node
// https://docs.github.com/en/codespaces/setting-up-your-project-for-codespaces/adding-a-dev-container-configuration/introduction-to-dev-containers
{
  "name": "Front-end Web Project",
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "vsls-contrib.codetour",
        "wayou.vscode-todo-highlight"
      ],
      "settings": {
        "editor.tabSize": 2,
        "terminal.integrated.defaultProfile.linux": "bash",
        "workbench.colorTheme": "Default Dark+",
        "files.autoSave": "onFocusChange",
        "editor.formatOnSave": true,
        "files.watcherExclude": {
          "**/.git/objects/**": true,
          "**/.git/subtree-cache/**": true,
          "**/node_modules/**": true
        }
      },
      "features": {
        "ghcr.io/devcontainers-contrib/features/live-server:1": {}
      },
      "postCreateCommand": "echo 'Environment ready!'"
    }
  }
}
